<h4>{{ _('Heat Bed Savety') }}</h4>
<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Pin:') }}</label>
        <div class="controls" data-toggle="tooltip" title="{{ _('Which Raspberry Pi BCM GPIO pin your Relais is attached to') }}">
            <input type="number" step="any" min="1" class="input-mini text-right" data-bind="value: settings.plugins.heatbedsavety.pin">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('MaxTemp:') }}</label>
        <div class="controls" data-toggle="tooltip" title="{{ _('Bed Temperature which should never been reached') }}">
            <input type="number" step="any" min="1" class="input-mini text-right" data-bind="value: settings.plugins.heatbedsavety.maxtemp">
        </div>
    </div>
</form>
